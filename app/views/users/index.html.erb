<div class="container">
    <h2 class="text-center text-primary font-weight-bold pt-4">All Users</h2>
    <div class="row justify-content-center pt-5">
        <% @users.each do |user| %>
            <div class="card w-75 my-2">
                <div class="card-header">
                    <h4 class="text-center"><%= link_to user.email.split("@").first, user %></h4>
                </div>
            </div>
        <% end %>
    </div>
</div>